{
  "name": "draft",
  "version": "0.0.1",
  "description": "Boilerplate for rapid prototyping",
  "main": "public/app.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "js": "node_modules/watchify/bin/cmd.js  --extension='.glsl' src/scripts/app.js -o public/app.js",
    "css": "node_modules/catw/bin/cmd.js src/styles/*.css -o public/app.css -v",
    "server": "node_modules/http-server/bin/http-server public",
    "start": "npm run js & npm run css & npm run server"
  },
  "author": "Giulian Drimba <giuliandrimba@gmail.com>",
  "license": "ISC",
  "browserify": {
    "transform": [
      [
        "babelify",
        {
          "presets": [
            "es2015"
          ]
        }
      ],
      [
        "stringify"
      ],
      [
        "glslify"
      ]
    ]
  },
  "devDependencies": {
    "babel-preset-es2015": "^6.6.0",
    "babelify": "^7.2.0",
    "browserify": "^11.1.0",
    "catw": "^1.0.1",
    "glslify": "^5.0.2",
    "http-server": "^0.8.0",
    "stringify": "^3.1.0",
    "watchify": "^3.4.0"
  },
  "dependencies": {
    "babel-preset-es2015": "^6.6.0",
    "babelify": "^7.2.0",
    "glslify": "^5.0.2",
    "gsap": "^1.18.2"
  }
}
