{
  "name": "draft",
  "version": "0.0.1",
  "description": "Boilerplate for rapid prototyping",
  "main": "public/app.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "js": "node_modules/watchify/bin/cmd.js -t stringify --extension='.html' src/scripts/app.js -o public/app.js",
