  "devDependencies": {
    "browserify": "^11.1.0",
    "catw": "^1.0.1",
    "http-server": "^0.8.0",
    "stringify": "^3.1.0",
    "watchify": "^3.4.0"
  },
  "dependencies": {
    "grunt": "^0.4.5",
    "jquery": "^2.1.4",
    "postprocessing": "^1.0.2",
    "three": "^0.74.0",
    "three-effectcomposer": "0.0.1",
    "three-orbit-controls": "^72.0.0"
  }
